        },
		
		
{
                    "type": "text",
                    "id": "title",
                    "label": "PRO2 Button Text"
                   
                },
				{
            "type": "url",
            "id": "videourl",
            "label": "Video Url"
        },
				 {
            "type": "image_picker",
            "id": "section2image",
            "label": "Section2 image"
        },
		{
                    "type": "richtext",
                    "id": "sec2text",
                    "label": "Section2 Text"
                   
                },
				{
            "type": "image_picker",
            "id": "section3image",
            "label": "Section3 image"
        },
		{
                    "type": "richtext",
                    "id": "sec3text",
                    "label": "Section3 Text"
                   
                },
				{
                    "type": "text",
                    "id": "sec3buttontext",
                    "label": "Section3 Button Text"
                   
                },
				{
				"type": "image_picker",
            "id": "section3rightimage",
            "label": "Section3 Right image"
        },
		{
                    "type": "text",
                    "id": "sec4text",
                    "label": "Section4 Text"
                   
                }

]
	
  }

