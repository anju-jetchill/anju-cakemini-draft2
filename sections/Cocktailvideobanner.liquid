
{% if section.settings.enable_full_banner %}
<div class="page-hero">
   
        <div class="page-hero__image">
           <img src= "{{section.settings.img | img_url: 'master' }}">
        </div>

   

    <div class="page-hero__wrap container {{ block.settings.contentAlign }}">
        <div class="page-hero__content">

            {%- if block.settings.subTitle -%}
                <p class="page-hero__sub-title">{{ block.settings.subTitle }}</p>
            {%- endif -%}

            {%- if article != blank -%}
                <p class="page-hero__sub-title">{{ article.published_at | date: format: 'abbreviated_date'}}</p>
            {%- endif -%}
			
			{% if section.settings.title != blank %}
    <h1>
     {{ section.settings.title | escape }}</h1>
    </h2>
  {% endif %}

          
  
            {%- if block.settings.text != blank -%}
                <div class="page-hero__text">
                    {{ block.settings.text }}
                </div>
            {%- endif -%}
        </div>
    </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_full_banner",
        "label": "Enable Fullwidth Banner",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Default image"
      },
	  {
      "type": "text",
      "id": "title",
      "label": "Heading"
        
 }
    ]
  }
 
{% endschema %}
 
