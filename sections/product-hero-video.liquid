{%- render 'product-hero-video', section : section -%}

{% schema %}
{
    "name": "Hero",
    "blocks" : [
        {
            "name": "Hero: Video",
            "type": "hero-video",
            "settings": [

                {
                    "type": "product",
                    "id": "product",
                    "label": "Product",
                    "info": "Select a product that this section should be displayed on"
                },
        
                {
                    "type": "header",
                    "content": "Video"
                },
        
                {
                    "type": "text",
                    "id": "videoURL",
                    "label": "Desktop Video Url",
                    "info": "Upload the video in the Shopify store. Copy then paste the url here."
                },
        
                {
                    "type": "text",
                    "id": "videoURLMobile",
                    "label": "Mobile Video URL",
                    "info": "Upload the video in the Shopify store. Copy then paste the url here."
                },
        
                {
                    "type": "checkbox",
                    "id": "videoAutoPlay",
                    "label": "AutoPlay",
                    "default": true
                },
        
                {
                    "type": "checkbox",
                    "id": "showGradient",
                    "label": "Show gradient",
                    "default": true
                },
        
                {
                    "type": "header",
                    "content": "Cover Image"
                },
        
                {
                    "type": "image_picker",
                    "id": "imageDesktop",
                    "label": "Desktop"
                },
        
                {
                    "type": "image_picker",
                    "id": "imageMobile",
                    "label": "Mobile"
                },
        
                {
                    "type": "header",
                    "content": "Content"
                },
        
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "SHOP BLASTER"
                },
        
                {
                    "type": "text",
                    "id": "subTitle",
                    "label": "Sub-title",
                    "default": "INDEPTH"
                },

                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text",
                    "default": "<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et d</p>"
                },
        
                {
                    "type": "header",
                    "content": "Button: 1"
                },
        
                {
                    "type": "text",
                    "id": "button1Title",
                    "label": "Title",
                    "default": "VIEW MORE"
                },
        
                {
                    "type": "url",
                    "id": "button1Url",
                    "label": "Url / Link"
                }
            ]
        }
    ],

    "presets": [
        {
            "category": "Hero",
            "name":"Video"
        }
    ]
}
{% endschema %}