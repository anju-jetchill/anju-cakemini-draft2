<div class="article-section-1 {% if block.settings.showBackground %}bg-swirls bg-swirls--v1{% endif %}">
    <div class="article-section-1__wrap {% if block.settings.flipDirection %}article-section-1--reverse{% endif %}">
        <div class="article-section-1__column">
            {%- if block.settings.imageDesktop != blank -%}
                {%- render 'image-responsive', image : block.settings.imageDesktop, custom_class : "", custom_alt : block.settings.title -%}
            {%- endif -%}
        </div>
        <div class="article-section-1__column article-section-1--text">
            <div class="article-section-1__column-wrap">
                {%- if block.settings.heading1 != blank -%}
                    <h2>{{ block.settings.heading1 }}</h2>
                {%- endif -%}
                {%- if block.settings.text1 != blank -%}
                    <div class="article-section-1__text">{{ block.settings.text1 }}</div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>
