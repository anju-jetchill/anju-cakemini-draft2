<div class="column-2">
    <div class="column-2__wrap">

        {%- for block in section.blocks -%}
            
            <div class="column-2__block {% if block.settings.imageDesktop != blank -%}column-2__block--hasImage{%- endif -%}">

                {%- if block.settings.showLogo == true -%}
                    <img class="column-2__logo lazyload" data-src="{{ 'logo-b.png' | asset_img_url: '1000x' }}" alt="Logo B">    
                {%- endif -%}

                {%- if block.settings.imageDesktop != blank -%}
                    <div class="column-2__block-image">
                        {%- render 'image-responsive', image : block.settings.imageDesktop, custom_class : "column-2__image-desktop" -%}
                        {%- if block.settings.imageMobile != blank -%}
                            {%- render 'image-responsive', image : block.settings.imageMobile, custom_class : "column-2__image-mobile" -%}
                        {%- endif -%}
                    </div>
                {%- endif -%}

                <div class="column-2__block-content">
                    <div class="column-2__block-content-wrap">
                        {%- if block.settings.logo != blank -%}
                            <div class="column-2__content-image">
                                {%- render "image-responsive", image : block.settings.logo, custom_alt : "Flavour Blaster logo" -%}
                            </div>
                        {%- endif -%}

                        {%- if block.settings.subTitle != blank -%}
                            <p class="column-2__sub-title">{{ block.settings.subTitle }}</p>
                        {%- endif -%}

                        {%- if block.settings.title != blank -%}
                            <h2>{{ block.settings.title }}</h2>
                        {%- endif -%}

                        {%- if block.settings.text != blank -%}
                            <div class="column-2__text">{{ block.settings.text }}</div>
                        {%- endif -%}

                        {%- if block.settings.button1Url != blank -%}
                            <div class="column-2__block-buttons">
                                <a href="{{ block.settings.button1Url }}">{{ block.settings.button1Title }}{%- render 'svg.arrow-right' -%}</a>
                            </div>
                        {%- endif -%}
                    </div>
                </div>
            </div>

        {%- endfor -%}
    </div>
</div>