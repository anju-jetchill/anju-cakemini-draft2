<div id="FindADealer" class="find-a-dealer bg-swirls bg-swirls--v2">
    <div class="container">
        <h1>{{ page.title }}</h1>
        <form id="FindADealerSearchForm" class="dealer-search-options">
            <div class="country">
                {% render 'country-select' -%}
            </div>
            <div class="location">
                <input type="text" name="location" placeholder="Enter your city, address or postcode/zip" />
            </div>
        </form>
        <div class="find-a-dealer__results">

            <div class="find-a-dealer__results__list">
                <div id="DealersList"></div>
                <a href="#" class="dealer-back-link btn-link">{% render 'icon-long-arrow-left.svg' %} back</a>
            </div>

            <div class="find-a-dealer__results__map">
                <div id="FindDealerMap"></div>
            </div>

        </div>
    </div>

    {%- section 'index-usp-hero' -%}
    {%- section 'index-hero-image-text' -%}
</div>

<template id="DealerListItem">
<div class="dealer-list-item" data-dealer-data="">
    <h4></h4>
    <div class="address"></div>
    <div class="contact-info">
        <a class="email" href=""></a>
        <a class="phone-number" href=""></a>
        <a class="website" href=""></a>
    </div>
    <div class="description"></div>
    <a class="directions-url btn-link" href="" target="_blank">Get Directions</a>
    <div class="distance">
        {%- render 'svg.location-icon' -%}
        <div><span class="miles-amount"></span>mi</div>
    </div>
</div>
</template>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>var customMarker = '{{ "map-marker.png" | asset_img_url :"60x" }}';</script>